<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="col-md-12">
            <h1><%= title %></h1>

            <% if((typeof displayName == 'string') && (displayName)) { %>
            <a href="/bcon-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Business Contact
            </a>
            <% } %>
            <br />
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">Number</th>
                    <th class="text-center col-3">Email</th>

                    <% if((typeof displayName == 'string') && (displayName)) { %>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BconList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= BconList[count].name %></td>
                        <td class="text-center col-2"><%= BconList[count].number %></td>
                        <td class="text-center col-3"><%= BconList[count].email %></td>

                        <% if((typeof displayName == 'string') && (displayName)) { %>
                            <td class="text-center col-1">
                            <a href="/bcon-list/edit/<%= BconList[count]._id %>" class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/bcon-list/delete/<%= BconList[count]._id %>" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                        <% } %>
                    </tr>
                <% } %>

            </table>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>